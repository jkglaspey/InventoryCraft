                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                        <TextField fx:id="nameTextField" onAction="#enterName" prefWidth="600.0" />
                        <Label stylesheets="@footnote.css" text="Between 2-256 characters">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </Label>
                        <HBox prefHeight="31.0">
                           <children>
                              <Label stylesheets="@footnote.css" text="Serial Number:" />
                              <Pane fx:id="positionPaneSmall2" prefWidth="122.0" />
                              <Label fx:id="errorSerialLabel" opacity="0.0" stylesheets="@footnote.css" text="Must be in the correct format!" />
                           </children>
                        </HBox>
                        <TextField fx:id="serialTextField" onAction="#enterSerial" />
