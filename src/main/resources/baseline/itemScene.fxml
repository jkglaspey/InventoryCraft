                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </Label>
                        <HBox prefHeight="31.0">
                           <children>
                              <Label stylesheets="@footnote.css" text="Cost ($):" />
                              <Pane fx:id="positionPaneSmall3" prefWidth="311.0" />
                              <Label fx:id="errorCostLabel" opacity="0.0" stylesheets="@footnote.css" text="Must be numerical!" />
                           </children>
                        </HBox>
                        <TextField fx:id="costTextField" onAction="#enterCost" />
                        <Label stylesheets="@footnote.css" text="Will be saved to 2 decimal places">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
